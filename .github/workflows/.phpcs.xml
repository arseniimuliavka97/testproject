<?xml version="1.0"?>
<ruleset name="Custom Coding Standard">
    <description>My custom coding standard for PHP_CodeSniffer.</description>
    <rule ref="PSR2"/>
    <!-- Specify directories to be checked -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>resources</file>
    <!-- Exclude certain files or directories if needed -->
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
