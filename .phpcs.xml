<?xml version="1.0"?>
<ruleset name="Laravel TestProject Coding Standards">
    <description>My Laravel TestProject Coding Standards</description>
    <rule ref="PSR12"/>

    <!-- Specify directories to be checked -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>

    <!-- Exclude certain files or directories if needed -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
</ruleset>
